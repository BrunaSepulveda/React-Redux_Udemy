{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
			"space-before-function-paren": "off",
			"react/prop-types": "off",
			"semi": ["error", "always"],
			"arrow-parens": ["error", "as-needed"]
    }
}
